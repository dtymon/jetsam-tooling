{
  "name": "@jetsam/tooling",
  "version": "0.0.1",
  "description": "jetsam - Provides a consistent toolset for all jetsam packages and applications",
  "author": "David Tymon",
  "license": "MIT",
  "keywords": [
    "ts",
    "typescript",
    "platform",
    "framework",
    "microservice",
    "api",
    "express",
    "jetsam"
  ],
  "repository": "github:dtymon/jetsam-tooling",
  "bugs": "https://github.com/dtymon/jetsam-tooling/issues",
  "engines": {
    "node": ">=14.17.6 <15"
  },
  "scripts": {
    "build": "yarn clean && yarn compile && yarn build:dist",
    "clean": "rimraf ./dist",
    "compile": "tsc",
    "jetsam": "node ./dist/cli/jetsam",
    "build:dist": "yarn jetsam build-dist --files exported-configs",
    "lint": "yarn lint:src && yarn lint:bin && yarn lint:test",
    "lint:src": "eslint --config .eslintrc.js --no-error-on-unmatched-pattern --ignore-pattern 'src/lib/**/*.spec.ts' 'src/lib/**/*.ts'",
    "lint:bin": "eslint --config .eslintrc.bin.js --no-error-on-unmatched-pattern --ignore-pattern 'src/bin/**/*.spec.ts' 'src/bin/**/*.ts'",
    "lint:test": "eslint --config .eslintrc.spec.js --no-error-on-unmatched-pattern 'src/**/*.spec.ts' 'test/*.spec.ts' 'test/**/*.spec.ts'",
    "test": "NODE_CONFIG_DIR=./src/config NODE_ENV=test jest --ci --passWithNoTests --runInBand --",
    "pre-commit": "yarn build && yarn test && yarn lint && yarn jetsam audit --minimum high",
    "reinstall": "rimraf node_modules yarn.lock; yarn install",
    "release": "yarn jetsam release"
  },
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "jetsam": "./dist/cli/jetsam.js",
    "jetsam-subcmd-build-dist.js": "./dist/cli/jetsam-subcmd-build-dist.js",
    "jetsam-subcmd-audit.js": "./dist/cli/jetsam-subcmd-audit.js"
  },
  "dependencies": {
    "@microsoft/tsdoc": "^0.13.2",
    "@microsoft/tsdoc-config": "^0.15.2",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/jest-when": "^2.7.3",
    "@types/klaw": "^3.0.2",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^14.17.22",
    "@types/rimraf": "^3.0.2",
    "@types/yargs": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chalk": "^4.1.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "expect-more-jest": "^5.4.0",
    "fs-extra": "^10.0.0",
    "jest": "^27.2.4",
    "jest-junit": "^13.0.0",
    "jest-when": "^3.4.1",
    "json": "^11.0.0",
    "klaw": "^4.0.1",
    "mkdirp": "^1.0.4",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.11.0",
    "typedoc": "^0.22.5",
    "typescript": "~4.4.3",
    "yaml": "^1.10.2",
    "yargs": "^17.2.1"
  },
  "files": [
    "**/*.{ts,js,json}",
    "*.map",
    "bin/**",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "yarn.lock"
  ]
}
